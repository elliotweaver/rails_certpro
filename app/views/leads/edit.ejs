<div class="page-header"><h1>Edit lead</h1></div>

<% form_for(lead, {action: path_to.lead(lead), method: 'PUT', id: "lead_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('leads/form.ejs', {locals: {form: form, lead: lead}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update lead', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.lead(lead), {class: 'btn'}) %>
    </div>
<% });%>