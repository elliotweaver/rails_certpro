<div class="page-header">
    <h1>Details of category</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>id</th><td><%= category.id %></td></tr>
        <tr><th>name</th><td><%= category.name %></td></tr>
        <tr><th>created</th><td><%= category.created %></td></tr>
        <tr><th>updated</th><td><%= category.updated %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_category(category), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.category(category), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.categories()) %>
</div>