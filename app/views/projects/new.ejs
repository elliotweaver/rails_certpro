<div class="page-header">
    <h1>New project</h1>
</div>

<% form_for(project, {action: path_to.projects(), method: 'POST', id: "project_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('projects/form.ejs', {locals: {form: form, project: project}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create project', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.projects(), {class: 'btn'}) %>
    </div>
<% });%>
