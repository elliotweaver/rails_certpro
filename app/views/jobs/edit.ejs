<div class="page-header"><h1>Edit job</h1></div>

<% form_for(job, {action: path_to.job(job), method: 'PUT', id: "job_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('jobs/form.ejs', {locals: {form: form, job: job}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update job', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.job(job), {class: 'btn'}) %>
    </div>
<% });%>