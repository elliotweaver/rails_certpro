<div class="page-header">
    <h1>Details of job</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>id</th><td><%= job.id %></td></tr>
        <tr><th>name</th><td><%= job.name %></td></tr>
        <tr><th>description</th><td><%= job.description %></td></tr>
        <tr><th>price</th><td><%= job.price %></td></tr>
        <tr><th>categories</th>
          <td>
            <% categories.forEach(function(category) { %>
              <%= category.name %>, 
            <% }) %>
          </td>
        </tr>
        <tr><th>created</th><td><%= job.created %></td></tr>
        <tr><th>updated</th><td><%= job.updated %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_job(job), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.job(job), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.jobs()) %>
</div>