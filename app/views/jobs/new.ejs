<div class="page-header">
    <h1>New job</h1>
</div>

<% form_for(job, {action: path_to.jobs(), method: 'POST', id: "job_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('jobs/form.ejs', {locals: {form: form, job: job}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create job', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.jobs(), {class: 'btn'}) %>
    </div>
<% });%>
