<div class="page-header">
    <h1>Details of log</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= log.name %></td></tr>
        <tr><th>severity</th><td><%= log.severity %></td></tr>
        <tr><th>note</th><td><%= log.note %></td></tr>
        <tr><th>created</th><td><%= log.created %></td></tr>
        <tr><th>updated</th><td><%= log.updated %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_log(log), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.log(log), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.logs()) %>
</div>